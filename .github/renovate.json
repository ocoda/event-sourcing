{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"config:recommended",
		":disablePeerDependencies",
		"customManagers:biomeVersions",
		"security:openssf-scorecard"
	],
	"semanticCommits": "enabled",
	"commitMessagePrefix": ":arrow_up:",
	"labels": ["dependencies"],
	"rangeStrategy": "bump",
	"postUpdateOptions": ["pnpmDedupe"],
	"rebaseConflictedPrs": true,
	"ignorePaths": ["**/node_modules/**"],
	"schedule": ["after 10pm on sunday"],
	"timezone": "Europe/Brussels",
	"vulnerabilityAlerts": {
		"enabled": true,
		"labels": ["security"],
		"schedule": ["at any time"],
		"automerge": true,
		"automergeType": "pr",
		"prPriority": 10
	},
	"packageRules": [
		{
			"description": "Auto-merge patch updates (low risk)",
			"matchUpdateTypes": ["patch"],
			"matchCurrentVersion": "!/^0/",
			"automerge": true,
			"automergeType": "pr",
			"automergeStrategy": "squash",
			"schedule": ["after 10pm on sunday"],
			"minimumReleaseAge": "3 days"
		},
		{
			"description": "Auto-merge minor updates for stable packages",
			"matchUpdateTypes": ["minor"],
			"matchCurrentVersion": "!/^0/",
			"automerge": true,
			"automergeType": "pr",
			"automergeStrategy": "squash",
			"schedule": ["after 10pm on sunday"],
			"minimumReleaseAge": "7 days"
		},
		{
			"description": "Require manual review for 0.x packages",
			"matchCurrentVersion": "/^0/",
			"automerge": false,
			"labels": ["dependencies", "manual-review"]
		},
		{
			"description": "Require manual review for major updates",
			"matchUpdateTypes": ["major"],
			"automerge": false,
			"labels": ["dependencies", "breaking-change"],
			"commitMessagePrefix": ":boom:"
		},
		{
			"description": "Group NestJS updates",
			"matchPackagePatterns": ["^@nestjs/"],
			"groupName": "NestJS packages",
			"automerge": false,
			"labels": ["dependencies", "nestjs"]
		},
		{
			"description": "Group AWS SDK updates",
			"matchPackagePatterns": ["^@aws-sdk/"],
			"groupName": "AWS SDK packages",
			"automerge": true,
			"automergeType": "pr"
		},
		{
			"description": "Group TypeScript ecosystem",
			"matchPackagePatterns": ["typescript", "tsup", "@swc/"],
			"groupName": "TypeScript tooling",
			"automerge": false
		},
		{
			"description": "Group testing packages",
			"matchPackagePatterns": ["jest", "@types/jest", "@swc/jest"],
			"groupName": "Testing packages"
		},
		{
			"description": "Group database drivers",
			"matchPackageNames": ["pg", "pg-cursor", "mongodb", "mariadb", "@aws-sdk/client-dynamodb"],
			"groupName": "Database drivers",
			"automerge": false,
			"labels": ["dependencies", "database"]
		},
		{
			"description": "GitHub Actions - auto-merge minor/patch",
			"matchManagers": ["github-actions"],
			"matchUpdateTypes": ["minor", "patch"],
			"automerge": true,
			"automergeType": "pr"
		},
		{
			"description": "Ignore specific packages",
			"matchPackageNames": ["@biomejs/biome", "@types/node"],
			"enabled": false
		},
		{
			"description": "Pin node and pnpm versions",
			"matchPackageNames": ["node", "pnpm"],
			"enabled": false
		}
	],
	"prHourlyLimit": 5,
	"prConcurrentLimit": 10,
	"prBodyDefinitions": {
		"Package": "{{{depNameLinked}}}",
		"Type": "{{{updateType}}}",
		"Change": "`{{{currentVersion}}}` -> `{{{newVersion}}}`",
		"Age": "{{#if minimumReleaseAge}}Released {{{minimumReleaseAge}}} ago{{/if}}",
		"Changelog": "{{{releaseNotes}}}"
	},
	"prBodyTemplate": "{{{header}}}{{{table}}}{{{notes}}}{{{changelogs}}}{{{configDescription}}}{{{footer}}}",
	"lockFileMaintenance": {
		"enabled": true,
		"schedule": ["before 5am on the first day of the month"],
		"automerge": true
	}
}
