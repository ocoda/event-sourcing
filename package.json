{
	"name": "@ocoda/event-sourcing",
	"version": "1.0.0-beta.13",
	"description": "NestJS Event Sourcing Library",
	"author": "Dries Hooghe <dries@drieshooghe.com>",
	"license": "MIT",
	"main": "dist/index.js",
	"scripts": {
		"build": "rm -rf dist && tsc -p tsconfig.build.json",
		"ci": "rome ci ./lib",
		"format": "rome format ./lib ./tests ./example --write",
		"lint": "rome check ./lib ./tests ./example --apply-suggested",
		"test": "jest --config jest.config.js --runInBand",
		"test:ci": "jest --config jest.config.js --runInBand --coverage",
		"run:example": "node -r @swc-node/register ./example/src/main.ts",
		"prepublish:npm": "pnpm build",
		"publish:npm": "pnpm publish --access public",
		"prepublish:next": "pnpm build",
		"publish:next": "pnpm publish --access public --tag next",
		"prerelease": "pnpm build",
		"release": "release-it"
	},
	"engines": {
		"node": ">= 18.0.0"
	},
	"dependencies": {
		"class-transformer": "0.5.1"
	},
	"peerDependencies": {
		"@aws-sdk/client-dynamodb": "^3.180.0",
		"@aws-sdk/util-dynamodb": "^3.180.0",
		"@nestjs/common": "^9.0.0",
		"@nestjs/core": "^9.0.0",
		"mongodb": "^4.9.1",
		"reflect-metadata": "^0.1.13",
		"rxjs": "^7.2.0"
	},
	"peerDependenciesMeta": {
		"@aws-sdk/client-dynamodb": {
			"optional": true
		},
		"@aws-sdk/util-dynamodb": {
			"optional": true
		},
		"mongodb": {
			"optional": true
		}
	},
	"devDependencies": {
		"@aws-sdk/client-dynamodb": "3.266.0",
		"@aws-sdk/util-dynamodb": "3.266.0",
		"@faker-js/faker": "^7.5.0",
		"@nestjs/common": "9.2.1",
		"@nestjs/core": "9.2.1",
		"@nestjs/platform-express": "9.2.1",
		"@nestjs/testing": "9.2.1",
		"@swc-node/register": "^1.5.2",
		"@swc/core": "1.3.32",
		"@swc/jest": "0.2.24",
		"@types/jest": "29.2.6",
		"@types/node": "18.13.0",
		"jest": "29.3.1",
		"jest-mock": "29.3.1",
		"mongodb": "4.13.0",
		"mongodb-memory-server": "8.11.3",
		"reflect-metadata": "0.1.13",
		"release-it": "15.6.0",
		"rome": "10.0.1",
		"rxjs": "7.8.0",
		"typescript": "4.9.5"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/ocoda/event-sourcing"
	}
}
