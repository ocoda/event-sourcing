{
	"name": "@ocoda/event-sourcing",
	"version": "1.0.0-beta.0",
	"description": "NestJS Event Sourcing Library",
	"author": "Dries Hooghe <dries@drieshooghe.com>",
	"license": "MIT",
	"main": "dist/index.js",
	"scripts": {
		"build": "rm -rf dist && tsc -p tsconfig.build.json",
		"ci": "rome ci ./lib",
		"format": "rome format ./lib ./tests --write",
		"lint": "rome check ./lib ./tests --apply-suggested",
		"test": "jest --config jest.config.js --runInBand",
		"test:ci": "jest --config jest.config.js --runInBand --coverage",
		"prepublish:npm": "pnpm build",
		"publish:npm": "pnpm publish --access public",
		"prepublish:next": "pnpm build",
		"publish:next": "pnpm publish --access public --tag next",
		"prerelease": "pnpm build",
		"release": "release-it"
	},
	"engines": {
		"node": ">= 18.0.0"
	},
	"dependencies": {
		"@nestjs/event-emitter": "1.3.1",
		"class-transformer": "0.5.1"
	},
	"peerDependencies": {
		"@aws-sdk/client-dynamodb": "^3.180.0",
		"@aws-sdk/util-dynamodb": "^3.180.0",
		"@nestjs/common": "^9.0.0",
		"@nestjs/core": "^9.0.0",
		"mongodb": "^4.9.1",
		"reflect-metadata": "^0.1.13",
		"rxjs": "^7.2.0"
	},
	"peerDependenciesMeta": {
		"@aws-sdk/client-dynamodb": {
			"optional": true
		},
		"@aws-sdk/util-dynamodb": {
			"optional": true
		},
		"mongodb": {
			"optional": true
		}
	},
	"devDependencies": {
		"@aws-sdk/client-dynamodb": "3.181.0",
		"@aws-sdk/util-dynamodb": "3.181.0",
		"@nestjs/common": "9.1.2",
		"@nestjs/core": "9.1.2",
		"@nestjs/platform-express": "9.1.2",
		"@nestjs/testing": "9.1.2",
		"@swc/core": "1.3.3",
		"@swc/jest": "0.2.23",
		"@types/jest": "29.1.0",
		"@types/node": "18.7.23",
		"jest": "29.1.1",
		"jest-mock": "29.1.1",
		"mongodb": "4.10.0",
		"mongodb-memory-server": "8.9.3",
		"reflect-metadata": "0.1.13",
		"release-it": "15.4.2",
		"rome": "0.9.0-next",
		"rxjs": "7.5.7",
		"typescript": "4.8.4"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/ocoda/event-sourcing"
	}
}